<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".ui.settingsFragment.SettingsFragment">

        <TextView
            android:id="@+id/settings_tv"
            style="@style/fragment_name_ts"
            android:text="Settings"
            android:textColor="?attr/questionTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="34dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/settings_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="SomeThing"
                android:textColor="?attr/questionTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="SomeThing"
                android:textColor="?attr/questionTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="SomeThing"
                android:textColor="?attr/questionTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/clear_history" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clear_history"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="Clear history"
                android:textColor="?attr/questionTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#C6C6C6"
            app:layout_constraintTop_toBottomOf="@id/clear_history" />


        <ImageView
            android:id="@+id/light_mode"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_smartphone_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clear_history" />

        <ImageView
            android:id="@+id/dark_mode"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_smartphone_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clear_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>